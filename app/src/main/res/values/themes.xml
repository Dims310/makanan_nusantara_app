<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyMakananNusantara" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="fontFamily">serif</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">@color/background</item>
    </style>

    <style name="ForegroundColor">
        <item name="android:background">@color/foreground</item>
    </style>

    <style name="ParentText">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ChildText">
        <item name="android:textColor">@color/text_caption</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="PriceText">
        <item name="android:textColor">@color/text_caption</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="Theme.MyMakananNusantara" parent="Base.Theme.MyMakananNusantara" />
</resources>